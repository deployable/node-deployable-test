{
  "name": "@deployable/test",
  "version": "0.3.0-3",
  "description": "Node Test Environment Helpers",
  "main": "lib/index.js",
  "scripts": {
    "test": "mocha",
    "test:debug": "DEBUG='*' mocha debug",
    "test:coverage": "istanbul cover _mocha && istanbul check-coverage",
    "release:test": "set -uex; yarn test; npm version prerelease; npm publish --tag testing --access public",
    "release:patch": "set -uex; rm -rf node_modules; yarn; yarn run test:coverage; npm version patch; git push; npm publish --access public; git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/deployable/node-deployable-test.git"
  },
  "keywords": [
    "deployable",
    "module",
    "test",
    "helpers"
  ],
  "author": "Matt Hoyle <code aatt deployable.co>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/deployable/node-deployable-test/issues"
  },
  "homepage": "https://github.com/deployable/node-deployable-test#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-fs": "^2.0.0",
    "istanbul": "~0.4.5",
    "klaw": "^2.1.1",
    "mocha": "^5.0.1",
    "mock-fs": "^4.4.2"
  },
  "dependencies": {
    "@deployable/errors": "~0.11.3",
    "bluebird": "^3.0.1",
    "debug": "^3.1.0",
    "fs-extra": "^5.0.0",
    "lodash.escaperegexp": "^4.1.2"
  }
}
